
<div class = "module_bg">
  <div class="row">
    <div class = "small-12 columns", id = 'title'>
      <%= project.name %>
    </div>
  </div>
  <div class="row">
    <div class = "small-3 small-offset-9 columns", id = 'date'>
      <%= project.date %>
    </div>
  </div>
  <div class="row">
    <div class = "small-10 small-centered columns", id = 'pic'>
      <%= image_tag  Image.find_by_project_id(project.id).photo.url, :id => "first" %>
    </div>
  </div>
  <div class="row">
    <div class = "small-12 columns", id = 'info'>
        <p><%= project.info %></p>
    </div>
  </div>
  <div class="row">
    <div class = "small-10 small-centered columns", id = 'more_button'>
      <%= link_to "Read More", project_path(project), id: 'more_text'  %>
    </div>
  </div>
</div>


