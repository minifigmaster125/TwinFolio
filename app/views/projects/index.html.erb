<div class = "row">
  <div class = "small-4 columns">
    <%= render 'shared/nav_j' %>
  </div>
  <div class = "row">
    <div class = "small-4 small-offset-7 columns">
       <%= link_to "Latest Project", project_path(Project.last), :class => 'blue_words', :id => "latest_proj_small"%>
    </div>
  </div>
  <div class = "row">
    <div class = "small-7 small-offset-5 columns">
      <p class = 'blue_words', id="all_proj_large">All Projects</p>
    </div>
  </div>
  <div class = "row">
    <div class ="small-6 small-offset-5 columns">
      <hr id = "header_pic">
    </div>
  </div>  
  <div class = "row">
  <div class = "large-6 small-offset-5 columns">
    
    <% provide(:title, "Projects") %>
    
    <%= render :partial => @projects%>
    <div class ="row">
      <div class = "small-4 small-offset-3 columns">
        <%= will_paginate @projects, :class => 'apple_pagination', :previous_label => image_tag('paginate_left.png'),  :next_label => image_tag('paginate_right.png') %>
      </div>
    </div>
  </div>
  <div class = "small-1 columns scroll">
    <aside id = "next_proj"> 
      <div class= "row">
        <div class = "go">
          <div id = "prev_proj_triangle"></div>
        </div>
      </div>
      <div class= "row">
        <div class="go">
          <div id = "next_proj_triangle"></div>
        </div>
      </div>
    </aside>
  </div> 
  </div>  
</div>
