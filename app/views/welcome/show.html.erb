<%= provide(:title, "About") %>
<div id="about">
  <div class="row">
    <div class = "small-2 columns">
      <%= link_to (image_tag "Arrow-Up.png"), root_path, class: "arrows_about_up" %>
      <div id  = "up_info" class = "words">
        Up
      </div>
    </div>
    <div class = "small-4 columns">
      <div id = "top_words", class = "words">
        This is us.
      </div>
    </div>
    <div class = "small-4 columns">
      <%= image_tag "placeholder.gif", class: "test_top_words"%>
    </div>
    <div class = "small-2 columns">
    </div>
  </div>
  <div class="row">
    <div class = "small-3 small-offset-2 columns">
      <%= image_tag "placeholder.gif", class: "test"%>
